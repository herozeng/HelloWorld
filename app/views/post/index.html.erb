<h1>Post#index</h1>

<%= debug @posts %>

<% @posts.each do |post| %>
	<h2><%= link_to post.title,post %></h2>
	<h2><%= post.id%></h2>
	<h2><%= post.title%></h2>
	<p><%= post.content%></p>
	<%= link_to "Edit",edit_post_path(post) %>
	<%= link_to "Delete",post, :confirm=>"Are you sure?", :method=> :delete%>
	<hr/>
<% end%>

<%= link_to "Add a new Post",new_post_path %>
